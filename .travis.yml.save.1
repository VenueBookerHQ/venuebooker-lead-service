#   A basic travis.yml boilerplate for Django projects
#
#   The set-up assumes a postgreSQL database.
#
#   Replace the following variables in the code:
# * your_project_settings
# * your_github_username
# * your_repo

language: python

python:
  - 3.5

services: postgresql

env:
  global:
  - DJANGO_SETTINGS_MODULE="base_site.settings"
  - PIP_USE_MIRRORS=true
  - DATABASE_URL='postgres://admin:bcadminpass123@localhost:5432/belfastcares'
  - DJANGO=1.9.2

cache: pip
install:
  - pip install -r requirements.tx

before_install:
  - export DJANGO_SETTINGS_MODULE=base_site.settings
  - export PYTHONPATH=$HOME/builds/GregorW14/venuebooker-api-service

script:
  - python web_app/tests.py
